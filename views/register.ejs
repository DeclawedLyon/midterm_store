  <%- include('partials/header') %>
    <body class="login-page">
      <img src="https://images.pexels.com/photos/46274/pexels-photo-46274.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="">
    <main class="lodin-page">
      <section class="register">
        <h3>Create Personal Account</h3>
        <form action="/register" method="POST">
          <div class="user-data">
            <label for="name"> Name </label> <br>
            <input type="name" name="name" placeholder="Enter name">
          </div>
          <div class="user-data">
            <label for="email"> Email </label> <br>
            <input type="email" name="email" placeholder="Enter email">
          </div>
          <div class="user-data">
            <label for="password"> Password </label> <br>
            <input type="password"  name="password" placeholder="Password" >
            <button type="submit" class="btn btn-outline-secondary"> Register </button>
          </div>
        </form>

      </section>


    </main>


    <div class="footer-basic">
      <%- include('partials/footer') %>
  </div>

