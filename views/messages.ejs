  <body>
    <h2 class="my-messages">Send message to the book owner!</h2>
    <div class="message-box">

      <form method="POST" action="/messages/<%= ownerid %>" id="message-buyer-seller">
        <div>
          <textarea name="message" id="message-input" cols="60" rows="10"></textarea>
          <!-- <input type="text" name="message" id="message-input"></input> -->

        </div>
        <div class="d-grid gap-2">
          <!-- <button class="btn btn-primary" type="button">Button</button> -->
          <button type="submit" value="submit" id="send-message" class="btn btn-danger">Send</button>
        </div>
      </form>
    </div>

    <div class="footer-basic">
      <%- include('partials/footer') %>
  </div>

