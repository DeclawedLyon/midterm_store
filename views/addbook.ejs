  <%- include('partials/header') %>
  <body>
    <main>
      <h1 style="padding-top: 130px; display: flex; justify-content: center;">Add a Book</h1>
    <div class="addbook-page">
    <div id="addbook-form">
      <form method="POST" action="/addbook">
        <label>Title:</label>
        <input type="text" name="title" id="nav-input" style="width: 350px;"></input>
        <p style="line-height: 0.1em;">&nbsp;</p>

        <label>Year:</label>
        <input type="text" name="year" id="nav-input" style="width: 350px;"></input>
        <p style="line-height: 0.1em;">&nbsp;</p>

        <label>Genre:</label>
        <input type="text" name="genre" id="nav-input" style="width: 350px;"></input>
        <p style="line-height: 0.1em;">&nbsp;</p>

        <label>Author:</label>
        <input type="text" name="author" id="nav-input" style="width: 350px;"></input>
        <p style="line-height: 0.1em;">&nbsp;</p>

        <label>Price:</label>
        <input type="number" name="price" id="nav-input" style="width: 350px"></input>
        <p style="line-height: 0.1em;">&nbsp;</p>

        <label>Image URL:</label>
        <input type="text" name="bookcover" id="nav-input"></input>
        <button type="submit" value="submit" id="post-ad-submit">Submit</button>
      </form>
    </div>
    </div>
    </main>

    <div class="footer-basic">
      <%- include('partials/footer') %>
  </div>

